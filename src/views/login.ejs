<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/header-nav-style.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="shortcut icon" href="/image/icons/ballfav.png" type="image/x-icon">
    <script src="/javaScript/index.js" type="module" defer></script>
    <title>Login</title>
</head>
<body>

    <%- include('partials/header') %>

    <div class="container">
        <h2>Login</h2>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Nome/Email:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Senha:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>

        <% if (error) { %>
            <div class="alert">
                <%= error %>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>

</body>
</html>