<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Episódios</title>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container">
        <h1>Episódios</h1>
        <div class="episodios">
            <% episodios.forEach(function(episodio) { %>
                <div class="card">
                    <h2><%= episodio.titulo %></h2>
                    <p><%= episodio.descricao %></p>
                    <a href="/episodio/<%= episodio._id %>">Assistir Episódio</a>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
  